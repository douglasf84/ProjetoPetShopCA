@model CleanArchBase.Application.ViewModels.ProdutoViewModel

@{
    ViewData["Title"] = "Details";
}

<h3>Product Details</h3>

<div>
    <hr />

    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Preco)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Preco)
        </dd>
    </dl>

    <div>
        <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-warning" title="Update">
            <span class="fas fa-edit">Update</span>
        </a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger" title="Delete">
            <span class="fas fa-trash-alt">Delete</span>
        </a>

        <a asp-action="Index" class="btn btn-info">Back to List</a>

    </div>

</div>